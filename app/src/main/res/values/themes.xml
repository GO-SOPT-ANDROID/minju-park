<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GOSOPTAndroid" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brown_300</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance.black" parent="">
        <item name="android:fontFamily">@font/dovemayo_gothic</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.white" parent="">
        <item name="android:fontFamily">@font/dovemayo_gothic</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textColor">@color/white</item>
    </style>



</resources>